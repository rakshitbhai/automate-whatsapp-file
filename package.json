{
  "name": "chatrik",
  "version": "1.0.0",
  "description": "WhatsApp Automation Tool for sending files automatically\nChatrik â€“ Your Chat Sidekick.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "electron"
  ],
  "author": "Rishabh Shukla",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "chokidar": "^4.0.3",
    "mime-types": "^3.0.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "@whiskeysockets/baileys": "^6.3.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.codeinbantai.chatrik",
    "productName": "Chatrik",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}